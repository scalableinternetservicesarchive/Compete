<%= form_for(@challenge) do |f| %>
  <% if @challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% @challenge.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row centered-form">
              <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title">Make a new challenge!</h3>
                  </div>
                 <div class="panel-body">
                    <form role="form">
                      <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                          <div class="form-group">
                            <div class="field">
                              <%= f.label :name %><br>
                              <%= f.text_field :name %>
                            </div>
                          </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                          <div class="form-group">
                            <div class="field">
                              <%= f.label :category %><br>
                              <%= f.select :category, options_for_select(Challenge.categories), include_blank:"Select a type" %>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                          <div class="form-group">
                            <div class="field">
                              <%= f.label :distance %><br>
                              <%= f.number_field :distance %>
                           </div>
                         </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                          <div class="form-group">
                            <div class="field">
                              <%= f.label :sport %><br>
                              <%= f.select :sport, options_for_select(Challenge.sports), include_blank:"Select a sport" %>
                            </div>
                         </div>
                         </div>
                      </div>
                      <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                              <div class="field">
                                <%= f.label :description %><br>
                                <%= f.text_area :description %>
                              </div>
                           </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="form-group">
                              <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="field">
                                  <%= f.label "Start date:" %><br>
                                  <%= f.date_select :start %>
                                </div>
                             </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                              <div class="form-group">
                                <div class="field">
                                  <%= f.label "End date:" %><br>
                                  <%= f.date_select :stop %>
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="form-group">
                                  <div class="actions">
                                    <%= f.submit %>
                                    <% end %>
                            </div>
                          </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>