<% gain = (@challenge.collab_gain.to_f / @challenge.distance) * 100
if gain >= 100 %>
<div class="progress">
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    Done!
  </div>
</div>
<%
   else %>
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="<%= gain %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= gain %>%">
    <%= @challenge.collab_gain %> meters
  </div>
</div>
<%end%>
