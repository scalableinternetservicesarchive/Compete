<!DOCTYPE html>
<html>
<head>
  <title>Compete</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
</head>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div data-spy="affix" data-offset-top="0" data-offset-bottom="200">
    <div id="nav">
    <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Compete', root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li <%= 'class="active"'.html_safe if current_page? root_path %>><%= link_to 'Challenges', root_path %></li>
        <li <%= 'class="active"'.html_safe if current_page? new_challenge_path %>><%= link_to 'New Challenge', new_challenge_path %></li>
        <li <%= 'class="active"'.html_safe if current_page? progresses_path %>><%= link_to 'My stats', progresses_path %></li>
      </ul>
    </div><!--/.nav-collapse -->
    </div>
    </div>
  </div>
</div>

<body class="container">

<%= yield %>

</body>
</html>
